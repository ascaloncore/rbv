<div class="mb-6">
  <style>
    /* 減損処理実行ボタンのホバースタイル */
    #impairment-submit:hover:not(:disabled) {
      background-color: #dc2626 !important; /* red-600 */
      color: #ffffff !important;
    }
  </style>
  
  <div class="mb-6">
    <p class="text-white mt-2">減損処理を実行する在庫を選択してください。ステータスが「完了」以外の在庫が表示されています。</p>
  </div>

  <%= form_with url: impairments_path, method: :post, local: true, id: "impairment-form", class: "space-y-4" do |f| %>
    <% if @stocks.any? %>
      <div class="flex justify-center mb-6">
        <%= f.submit "減損処理実行", class: "w-full max-w-md px-8 py-4 bg-white text-black hover:bg-red-600 hover:text-white font-bold rounded-lg transition-colors duration-200 flex items-center justify-center appearance-none border-none cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-white disabled:hover:text-black", id: "impairment-submit", data: { turbo_confirm: "減損処理を実行しますが、本当によろしいですか？" }, disabled: true, style: "background-color: #ffffff !important; color: #000000 !important; font-weight: 700 !important; font-size: 24px !important; height: 56px !important; min-height: 56px !important; box-sizing: border-box !important;" %>
      </div>

        <div class="flex justify-center mb-6">
          <div class="flex flex-wrap gap-2">
            <button type="button" id="select-all" class="px-6 py-3 bg-white text-black border-2 border-black hover:bg-gray-200 font-bold text-xs rounded-lg transition-colors duration-200 cursor-pointer min-w-[200px] h-[49px]">全て選択</button>
            <button type="button" id="deselect-all" class="px-6 py-3 bg-white text-black border-2 border-black hover:bg-gray-200 font-bold text-xs rounded-lg transition-colors duration-200 cursor-pointer min-w-[200px] h-[49px]">全て解除</button>
          </div>
        </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        <% @stocks.each do |stock| %>
          <div class="bg-gray-700 border border-gray-600 rounded-xl p-5 shadow-lg hover:bg-gray-650 hover:border-gray-500 transition-all">
            <div class="flex items-start gap-3">
              <input type="checkbox" name="stock_ids[]" value="<%= stock.id %>" id="stock_<%= stock.id %>" class="mt-1 w-5 h-5 text-[#00F0FF] bg-[#0F1115] border-[#2E323A] rounded focus:ring-[#00F0FF] focus:ring-2" />
              <div class="flex-1 min-w-0 overflow-hidden">
                <h2 class="text-lg font-bold break-words overflow-hidden line-clamp-2 text-white mb-3"><%= stock.title %></h2>
                <div class="space-y-2">
                  <p class="text-sm">
                    <span class="font-semibold text-gray-300">カテゴリ:</span>
                    <span class="inline-block px-2 py-1 bg-gray-800 border border-gray-600 rounded text-gray-300 text-xs ml-2"><%= stock.category.name %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">購入金額:</span>
                    <span class="text-white ml-2"><%= number_to_currency(stock.purchase_price, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">帳簿価額:</span>
                    <span class="text-[#FFFFFF] ml-2"><%= number_to_currency(stock.book_value || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">減損損失:</span>
                    <span class="text-[#EF4444] ml-2"><%= number_to_currency(stock.impairment_loss || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <% if stock.purchase_date %>
                    <p class="text-sm">
                      <span class="font-semibold text-[#94A3B8]">購入日:</span>
                      <span class="text-gray-400 ml-2"><%= stock.purchase_date.strftime("%Y年%m月%d日") %></span>
                    </p>
                  <% end %>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">ステータス:</span>
                    <span class="inline-block px-2 py-1 rounded text-xs ml-2 <%= status_badge_class(stock.status) %>"><%= I18n.t("activerecord.enums.stock.status.#{stock.status}") %></span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% else %>
      <div class="bg-gray-700 border border-gray-600 rounded-xl p-6 flex items-center space-x-3 shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-cyan-400 shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-gray-300">減損処理可能な在庫がありません。</span>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  (function() {
    let initialized = false;

    function initializeImpairmentForm() {
      // 既に初期化済みの場合はスキップ
      if (initialized) {
        const submitBtn = document.getElementById('impairment-submit');
        const checkboxes = document.querySelectorAll('input[type="checkbox"][name="stock_ids[]"]');
        if (submitBtn) {
          const checkedCount = Array.from(checkboxes).filter(cb => cb.checked).length;
          submitBtn.disabled = checkedCount === 0;
        }
        return;
      }

      const selectAllBtn = document.getElementById('select-all');
      const deselectAllBtn = document.getElementById('deselect-all');
      const checkboxes = document.querySelectorAll('input[type="checkbox"][name="stock_ids[]"]');
      const submitBtn = document.getElementById('impairment-submit');

      if (!submitBtn) return;

      function updateSubmitButton() {
        const checkedCount = Array.from(checkboxes).filter(cb => cb.checked).length;
        submitBtn.disabled = checkedCount === 0;
      }

      if (selectAllBtn) {
        selectAllBtn.addEventListener('click', function() {
          checkboxes.forEach(checkbox => {
            checkbox.checked = true;
          });
          updateSubmitButton();
        });
      }

      if (deselectAllBtn) {
        deselectAllBtn.addEventListener('click', function() {
          checkboxes.forEach(checkbox => {
            checkbox.checked = false;
          });
          updateSubmitButton();
        });
      }

      checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateSubmitButton);
      });

      // 初期状態でボタンを更新
      updateSubmitButton();
      initialized = true;
    }

    // Turbo対応: 複数のイベントに対応
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeImpairmentForm);
    } else {
      initializeImpairmentForm();
    }
    
    document.addEventListener('turbo:load', initializeImpairmentForm);
    document.addEventListener('turbo:frame-load', initializeImpairmentForm);
  })();
</script>
