<div class="mb-6">
  <div class="mb-6">
    <h1 class="text-3xl md:text-4xl font-bold text-[#FFFFFF]">減損処理</h1>
    <p class="text-[#94A3B8] mt-2">減損処理を実行する在庫を選択してください。ステータスが「完了」以外の在庫が表示されています。</p>
  </div>

  <%= form_with url: impairments_path, method: :post, local: true, id: "impairment-form", class: "space-y-4" do |f| %>
    <% if @stocks.any? %>
      <div class="flex flex-wrap gap-2 mb-4">
        <button type="button" id="select-all" class="px-4 py-2 bg-[#1A1C23] border border-[#2E323A] text-[#94A3B8] hover:border-[#00F0FF] hover:text-[#00F0FF] rounded transition-all">全て選択</button>
        <button type="button" id="deselect-all" class="px-4 py-2 bg-[#1A1C23] border border-[#2E323A] text-[#94A3B8] hover:border-[#00F0FF] hover:text-[#00F0FF] rounded transition-all">全て解除</button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        <% @stocks.each do |stock| %>
          <div class="bg-[#1A1C23] border border-[#2E323A] rounded-lg p-5 shadow-lg hover:bg-[#252830] hover:border-[#3E434A] transition-all">
            <div class="flex items-start gap-3">
              <input type="checkbox" name="stock_ids[]" value="<%= stock.id %>" id="stock_<%= stock.id %>" class="mt-1 w-5 h-5 text-[#00F0FF] bg-[#0F1115] border-[#2E323A] rounded focus:ring-[#00F0FF] focus:ring-2" />
              <div class="flex-1 min-w-0 overflow-hidden">
                <h2 class="text-lg font-bold break-words overflow-hidden line-clamp-2 text-[#FFFFFF] mb-3"><%= stock.title %></h2>
                <div class="space-y-2">
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">カテゴリ:</span>
                    <span class="inline-block px-2 py-1 bg-[#0F1115] border border-[#2E323A] rounded text-[#94A3B8] text-xs ml-2"><%= stock.category.name %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">購入金額:</span>
                    <span class="text-[#FFFFFF] ml-2"><%= number_to_currency(stock.purchase_price, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">帳簿価額:</span>
                    <span class="text-[#FFFFFF] ml-2"><%= number_to_currency(stock.book_value || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">減損損失:</span>
                    <span class="text-[#EF4444] ml-2"><%= number_to_currency(stock.impairment_loss || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
                  </p>
                  <% if stock.purchase_date %>
                    <p class="text-sm">
                      <span class="font-semibold text-[#94A3B8]">購入日:</span>
                      <span class="text-[#64748B] ml-2"><%= stock.purchase_date.strftime("%Y年%m月%d日") %></span>
                    </p>
                  <% end %>
                  <p class="text-sm">
                    <span class="font-semibold text-[#94A3B8]">ステータス:</span>
                    <span class="inline-block px-2 py-1 rounded text-xs ml-2 <%= status_badge_class(stock.status) %>"><%= I18n.t("activerecord.enums.stock.status.#{stock.status}") %></span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-6 flex justify-center">
        <%= f.submit "減損処理実行", class: "px-8 py-3 bg-[#EF4444] text-[#FFFFFF] hover:bg-[#DC2626] font-bold rounded-lg transition-all cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed", id: "impairment-submit", data: { turbo_confirm: "減損処理を実行しますが、よろしいですか？" }, disabled: true %>
      </div>
    <% else %>
      <div class="bg-[#1A1C23] border border-[#2E323A] rounded-lg p-6 flex items-center space-x-3">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-[#00F0FF] shrink-0 w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-[#94A3B8]">減損処理可能な在庫がありません。</span>
      </div>
    <% end %>
  <% end %>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const selectAllBtn = document.getElementById('select-all');
    const deselectAllBtn = document.getElementById('deselect-all');
    const checkboxes = document.querySelectorAll('input[type="checkbox"][name="stock_ids[]"]');
    const submitBtn = document.getElementById('impairment-submit');

    if (selectAllBtn) {
      selectAllBtn.addEventListener('click', function() {
        checkboxes.forEach(checkbox => {
          checkbox.checked = true;
        });
        updateSubmitButton();
      });
    }

    if (deselectAllBtn) {
      deselectAllBtn.addEventListener('click', function() {
        checkboxes.forEach(checkbox => {
          checkbox.checked = false;
        });
        updateSubmitButton();
      });
    }

    function updateSubmitButton() {
      const checkedCount = Array.from(checkboxes).filter(cb => cb.checked).length;
      if (submitBtn) {
        submitBtn.disabled = checkedCount === 0;
      }
    }

    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', updateSubmitButton);
    });

    // 初期状態でボタンを無効化
    updateSubmitButton();
  });
</script>
