<% if flash[:success] %>
  <div class="bg-[#064E3B] text-[#A7F3D0] border border-[#10B981] rounded-lg p-4 mb-4 flex items-center space-x-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span><%= flash[:success] %></span>
  </div>
<% end %>

<% if flash[:notice] || flash[:info] %>
  <div class="bg-[#1A1C23] text-[#00F0FF] border border-[#2E323A] rounded-lg p-4 mb-4 flex items-center space-x-3">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span><%= flash[:notice] || flash[:info] %></span>
  </div>
<% end %>

<% if flash[:alert] || flash[:danger] %>
  <div class="bg-[#450A0A] text-[#FECACA] border border-[#EF4444] rounded-lg p-4 mb-4 flex items-center space-x-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span><%= flash[:alert] || flash[:danger] %></span>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="bg-[#1A1C23] text-[#FBBF24] border border-[#FBBF24]/50 rounded-lg p-4 mb-4 flex items-center space-x-3">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <span><%= flash[:warning] %></span>
  </div>
<% end %>
