<div class="max-w-md mx-auto">
  <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center text-[#FFFFFF]">ユーザー登録</h1>

  <%= form_with model: @user, url: users_path, local: true, class: "bg-[#1A1C23] border border-[#2E323A] rounded-lg p-6 md:p-8 space-y-6" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-[#450A0A] text-[#FECACA] border border-[#EF4444] rounded-lg p-4 flex items-start space-x-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="font-bold mb-2">エラーがあります</h3>
          <ul class="list-disc list-inside space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        名前
      <% end %>
      <%= f.text_field :name, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "名前を入力してください" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        メールアドレス
      <% end %>
      <%= f.email_field :email, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "example@email.com" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        パスワード
      <% end %>
      <%= f.password_field :password, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "8文字以上" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        パスワード（確認）
      <% end %>
      <%= f.password_field :password_confirmation, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "パスワードを再入力してください" %>
    </div>

    <div class="pt-4 border-t border-[#2E323A]">
      <%= f.submit "登録", class: "w-full px-4 py-3 bg-[#00F0FF] text-[#050505] hover:bg-[#00D0DF] font-bold rounded transition-all cursor-pointer" %>
    </div>
  <% end %>
</div>
