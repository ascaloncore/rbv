<div class="max-w-md mx-auto">
  <h1 class="text-3xl font-bold mb-6">ログイン</h1>

  <%= form_with url: login_path, local: true, class: "space-y-4" do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= flash[:alert] %></span>
      </div>
    <% end %>

    <div class="form-control">
      <%= f.label :email, class: "label" do %>
        <span class="label-text">メールアドレス</span>
      <% end %>
      <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "example@email.com", required: true %>
    </div>

    <div class="form-control">
      <%= f.label :password, class: "label" do %>
        <span class="label-text">パスワード</span>
      <% end %>
      <%= f.password_field :password, class: "input input-bordered w-full", placeholder: "パスワードを入力してください", required: true %>
    </div>

    <div class="form-control mt-6">
      <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "新規登録はこちら", new_user_path, class: "link link-primary" %>
  </div>
</div>
