<div class="min-h-[calc(100vh-200px)] flex items-center justify-center px-4">
  <div class="w-full max-w-2xl">
    <div class="bg-[#4B5563] border-2 border-gray-400 rounded-3xl p-12 shadow-2xl">
      
      <%= form_with url: login_path, local: true, class: "space-y-12" do |f| %>
        
        <div>
          <%= f.label :email, "メールアドレス", class: "block text-2xl font-bold text-white mb-4" %>
          <%= f.email_field :email, 
              class: "w-full bg-[#1F2937] border-2 border-gray-300 text-white text-3xl rounded-2xl p-6 focus:border-[#00F0FF] focus:ring-4 focus:ring-[#00F0FF]/50 outline-none placeholder:text-gray-500", 
              placeholder: "example@email.com", required: true %>
        </div>

        <div>
          <div class="flex justify-between items-center mb-4">
            <%= f.label :password, "パスワード", class: "block text-2xl font-bold text-white" %>
          </div>
          <%= f.password_field :password, 
              class: "w-full bg-[#1F2937] border-2 border-gray-300 text-white text-3xl rounded-2xl p-6 focus:border-[#00F0FF] focus:ring-4 focus:ring-[#00F0FF]/50 outline-none placeholder:text-gray-500", 
              placeholder: "パスワード", required: true %>
        </div>

        <div class="pt-4">
          <%= f.submit "ログイン", 
              class: "block w-full bg-gray-200 hover:bg-white text-black font-black text-3xl py-6 rounded-2xl shadow-xl hover:shadow-[0_0_30px_rgba(255,255,255,0.4)] cursor-pointer transition-transform active:scale-95 border-none" %>
        </div>
      <% end %>
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-300 text-xl mb-3">アカウントをお持ちでない方は</p>
      <%= link_to "新規登録はこちら", new_user_path, class: "inline-block text-[#00F0FF] font-bold text-2xl border-b-4 border-[#00F0FF] hover:text-white hover:border-white transition-colors pb-1" %>
    </div>

  </div>
</div>
