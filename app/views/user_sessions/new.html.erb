<div class="max-w-md mx-auto">
  <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center text-[#FFFFFF]">ログイン</h1>

  <%= form_with url: login_path, local: true, class: "bg-[#1A1C23] border border-[#2E323A] rounded-lg p-6 md:p-8 space-y-6" do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        メールアドレス
      <% end %>
      <%= f.email_field :email, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "example@email.com", required: true %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
        パスワード
      <% end %>
      <%= f.password_field :password, class: "w-full bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none", placeholder: "パスワードを入力してください", required: true %>
    </div>

    <div class="pt-4 border-t border-[#2E323A]">
      <%= f.submit "ログイン", class: "w-full px-4 py-3 bg-[#00F0FF] text-[#050505] hover:bg-[#00D0DF] font-bold rounded transition-all cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "新規登録はこちら", new_user_path, class: "text-[#00F0FF] hover:text-[#00D0DF] hover:drop-shadow-[0_0_8px_rgba(0,240,255,0.5)] transition-all font-medium" %>
  </div>
</div>
