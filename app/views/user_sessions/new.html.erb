<div class="max-w-md mx-auto">
  <h1 class="text-3xl md:text-4xl font-bold mb-6 text-center text-[#FFFFFF]">ログイン</h1>

  <%= form_with url: login_path, local: true, class: "bg-gray-700 border border-gray-600 rounded-xl p-6 md:p-8 space-y-6 shadow-lg" do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" do %>
        メールアドレス
      <% end %>
      <%= f.email_field :email, class: "w-full bg-gray-800 border border-gray-600 text-white rounded-lg p-3 focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/50 outline-none transition-all duration-300 placeholder:text-gray-400", placeholder: "example@email.com", required: true %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" do %>
        パスワード
      <% end %>
      <%= f.password_field :password, class: "w-full bg-gray-800 border border-gray-600 text-white rounded-lg p-3 focus:border-cyan-500 focus:ring-2 focus:ring-cyan-500/50 outline-none transition-all duration-300 placeholder:text-gray-400", placeholder: "パスワードを入力してください", required: true %>
    </div>

    <div class="pt-4 border-t border-gray-700">
      <%= f.submit "ログイン", class: "w-full px-8 py-3 bg-gradient-to-r from-cyan-500 to-blue-600 text-white hover:from-cyan-400 hover:to-blue-500 font-bold rounded-lg shadow-[0_0_20px_rgba(6,182,212,0.4)] hover:shadow-[0_0_30px_rgba(6,182,212,0.6)] hover:scale-105 transition-all duration-300 cursor-pointer" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "新規登録はこちら", new_user_path, class: "text-cyan-400 hover:text-cyan-300 hover:drop-shadow-[0_0_12px_rgba(34,211,238,0.6)] transition-all duration-300 font-medium" %>
  </div>
</div>
