<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">在庫登録</h1>

  <%= form_with model: @stock, url: stocks_path, local: true, class: "space-y-4" do |f| %>
    <% if @stock.errors.any? %>
      <div class="alert alert-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="font-bold">エラーがあります</h3>
          <ul class="list-disc list-inside">
            <% @stock.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="form-control">
      <%= f.label :title, class: "label" do %>
        <span class="label-text">タイトル <span class="text-error">*</span></span>
      <% end %>
      <%= f.text_field :title, class: "input input-bordered w-full", placeholder: "学習資産のタイトルを入力してください", required: true %>
    </div>

    <div class="form-control">
      <%= f.label :category_id, class: "label" do %>
        <span class="label-text">カテゴリ <span class="text-error">*</span></span>
      <% end %>
      <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "カテゴリを選択してください" }, { class: "select select-bordered w-full", required: true } %>
    </div>

    <div class="form-control">
      <%= f.label :purchase_price, class: "label" do %>
        <span class="label-text">購入金額（円）</span>
      <% end %>
      <%= f.number_field :purchase_price, class: "input input-bordered w-full", placeholder: "0", min: 0, step: 1 %>
    </div>

    <div class="form-control">
      <%= f.label :purchase_date, class: "label" do %>
        <span class="label-text">購入日</span>
      <% end %>
      <%= f.date_field :purchase_date, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= f.label :status, class: "label" do %>
        <span class="label-text">ステータス</span>
      <% end %>
      <%= f.select :status, options_for_select([
        ["未読 (適正在庫)", "unread"],
        ["読書中 (適正在庫)", "reading"],
        ["停滞中 (滞留在庫)", "stagnant"],
        ["中断中 (不良在庫)", "suspended"],
        ["減損損失 (読書撤退損)", "impaired"],
        ["読書完了 (知識資産)", "completed"]
      ], @stock.status || "unread"), {}, { class: "select select-bordered w-full" } %>
    </div>

    <div class="form-control">
      <%= f.label :impression, class: "label" do %>
        <span class="label-text">感想・メモ</span>
      <% end %>
      <%= f.text_area :impression, class: "textarea textarea-bordered w-full h-32", placeholder: "感想やメモを入力してください" %>
    </div>

    <div class="form-control mt-6">
      <div class="flex gap-4">
        <%= f.submit "登録", class: "btn btn-primary flex-1" %>
        <%= link_to "キャンセル", stocks_path, class: "btn btn-outline flex-1" %>
      </div>
    </div>
  <% end %>
</div>
