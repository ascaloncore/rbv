<div class="mb-6">

  <% if @stocks.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      <% @stocks.each do |stock| %>
        <div class="bg-gray-700 border border-gray-600 rounded-xl p-5 shadow-lg hover:bg-gray-650 hover:border-gray-500 transition-all">
          <h2 class="text-xl font-bold text-[#FFFFFF] mb-4 break-words overflow-hidden line-clamp-2"><%= stock.title %></h2>
          <div class="space-y-2 mb-4">
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">カテゴリ:</span>
              <span class="inline-block px-2 py-1 bg-gray-800 border border-gray-600 rounded text-gray-300 text-xs ml-2"><%= stock.category.name %></span>
            </p>
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">購入金額:</span>
              <span class="text-[#FFFFFF] ml-2"><%= number_to_currency(stock.purchase_price, unit: "¥", format: "%u %n", precision: 0) %></span>
            </p>
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">帳簿価額:</span>
              <span class="text-[#FFFFFF] ml-2"><%= number_to_currency(stock.book_value || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
            </p>
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">減損損失:</span>
              <span class="text-[#EF4444] ml-2"><%= number_to_currency(stock.impairment_loss || 0, unit: "¥", format: "%u %n", precision: 0) %></span>
            </p>
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">購入日:</span>
              <span class="text-[#64748B] ml-2"><%= stock.purchase_date&.strftime("%Y年%m月%d日") || "未設定" %></span>
            </p>
            <p class="text-sm">
              <span class="font-semibold text-[#94A3B8]">ステータス:</span>
              <span class="inline-block px-2 py-1 rounded text-xs ml-2 <%= status_badge_class(stock.status) %>"><%= I18n.t("activerecord.enums.stock.status.#{stock.status}") %></span>
            </p>
          </div>
          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-gray-700">
            <%= link_to "詳細", stock_path(stock), class: "px-4 py-2 bg-blue text-white hover:from-cyan-400 hover:to-blue-500 font-bold rounded-lg text-sm shadow-lg hover:shadow-cyan-500/50 transition-all duration-300", style: "color: #ffffff !important; font-size: 25px !important;" %>
            <%= link_to "編集", edit_stock_path(stock), class: "px-4 py-2 bg-white text-black hover:bg-gray-100 hover:text-black hover:border-gray-500 font-bold rounded-lg text-sm transition-all duration-300", style: "color: #000000 !important;" %>
            <%= link_to "削除", stock_path(stock), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "px-4 py-2 bg-red-600 text-white hover:bg-red-700 font-bold rounded-lg text-sm shadow-lg hover:shadow-red-600/50 transition-all duration-300", style: "color: #ffffff !important;" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-700 border border-gray-600 rounded-xl p-6 flex items-center space-x-3 shadow-lg">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-cyan-400 shrink-0 w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="text-gray-300">在庫が登録されていません。新規登録から登録してください。</span>
    </div>
  <% end %>
</div>
