<div class="max-w-4xl mx-auto">
  <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4 mb-6">
    <h1 class="text-3xl md:text-4xl font-bold text-[#FFFFFF]">在庫詳細</h1>
    <div class="flex flex-wrap gap-2">
      <%= link_to "編集", edit_stock_path(@stock), class: "px-4 py-2 bg-[#00F0FF] text-[#050505] hover:bg-[#00D0DF] font-bold rounded transition-all" %>
      <%= link_to "削除", stock_path(@stock), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "px-4 py-2 bg-[#450A0A] border border-[#EF4444] text-[#EF4444] hover:bg-[#EF4444] hover:text-[#FFFFFF] rounded transition-all" %>
      <%= link_to "一覧に戻る", stocks_path, class: "px-4 py-2 bg-[#1A1C23] border border-[#2E323A] text-[#94A3B8] hover:border-[#00F0FF] hover:text-[#00F0FF] rounded transition-all" %>
    </div>
  </div>

  <div class="bg-[#1A1C23] border border-[#2E323A] rounded-lg p-6 shadow-lg mb-6">
    <div class="space-y-6">
      <div>
        <h2 class="text-2xl md:text-3xl font-bold mb-3 break-words overflow-hidden text-[#FFFFFF]"><%= @stock.title %></h2>
        <div class="flex flex-wrap gap-2 mt-3">
          <span class="inline-block px-3 py-1 bg-[#0F1115] border border-[#2E323A] rounded text-[#94A3B8] text-sm"><%= @stock.category.name %></span>
          <span class="inline-block px-3 py-1 rounded text-sm <%= status_badge_class(@stock.status) %>"><%= I18n.t("activerecord.enums.stock.status.#{@stock.status}") %></span>
        </div>
      </div>

      <div class="border-t border-[#2E323A] pt-6"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-semibold text-lg mb-2 text-[#94A3B8]">購入金額</h3>
          <p class="text-xl text-[#FFFFFF]">
            <%= number_to_currency(@stock.purchase_price, unit: "¥", format: "%u %n", precision: 0) %>
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-lg mb-2 text-[#94A3B8]">帳簿価額</h3>
          <p class="text-xl text-[#FFFFFF]">
            <%= number_to_currency(@stock.book_value || 0, unit: "¥", format: "%u %n", precision: 0) %>
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-lg mb-2 text-[#94A3B8]">購入日</h3>
          <p class="text-xl text-[#FFFFFF]">
            <%= @stock.purchase_date ? @stock.purchase_date.strftime("%Y年%m月%d日") : "未設定" %>
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-lg mb-2 text-[#94A3B8]">減損損失</h3>
          <p class="text-xl text-[#EF4444]">
            <%= number_to_currency(@stock.impairment_loss || 0, unit: "¥", format: "%u %n", precision: 0) %>
          </p>
        </div>
      </div>

      <% if @stock.impression.present? %>
        <div class="border-t border-[#2E323A] pt-6">
          <h3 class="font-semibold text-lg mb-2 text-[#94A3B8]">感想・メモ</h3>
          <p class="break-words whitespace-pre-wrap text-[#94A3B8] leading-relaxed"><%= @stock.impression %></p>
        </div>
      <% end %>

      <div class="border-t border-[#2E323A] pt-6">
        <div class="text-sm text-[#64748B]">
          <p>登録日: <%= @stock.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
          <% if @stock.updated_at != @stock.created_at %>
            <p>更新日: <%= @stock.updated_at.strftime("%Y年%m月%d日 %H:%M") %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-[#1A1C23] border border-[#2E323A] rounded-lg p-6 shadow-lg">
    <h2 class="text-2xl font-bold mb-4 text-[#FFFFFF]">読書メモ</h2>

    <!-- 新規投稿フォーム -->
    <%= form_with model: [@stock, @stock.memos.build], local: true, class: "mb-6" do |f| %>
      <div class="mb-4">
        <%= f.label :body, class: "block text-sm font-medium text-[#94A3B8] mb-2" do %>
          メモを入力（400文字以内）
        <% end %>
        <%= f.text_area :body, class: "w-full h-24 bg-slate-800 border border-slate-600 text-[#FFFFFF] rounded p-3 focus:border-[#00F0FF] focus:ring-1 focus:ring-[#00F0FF] outline-none resize-none", placeholder: "読書メモを入力してください", required: true, maxlength: 400 %>
      </div>
      <div>
        <%= f.submit "投稿", class: "px-4 py-2 bg-[#00F0FF] text-[#050505] hover:bg-[#00D0DF] font-bold rounded transition-all cursor-pointer" %>
      </div>
    <% end %>

    <!-- メモ一覧 -->
    <% if @memos.any? %>
      <div class="space-y-4">
        <% @memos.each do |memo| %>
          <div class="border-b border-[#2E323A] pb-4 last:border-b-0">
            <div class="flex justify-between items-start mb-2">
              <div>
                <p class="font-semibold text-[#FFFFFF]"><%= memo.user.name %></p>
                <p class="text-sm text-[#64748B]"><%= memo.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
              </div>
              <% if memo.user == current_user %>
                <%= link_to "削除", stock_memo_path(@stock, memo), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "px-3 py-1 bg-[#450A0A] border border-[#EF4444] text-[#EF4444] hover:bg-[#EF4444] hover:text-[#FFFFFF] rounded text-sm transition-all" %>
              <% end %>
            </div>
            <p class="break-words whitespace-pre-wrap text-[#94A3B8] leading-relaxed"><%= memo.body %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
